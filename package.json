{
    "name": "me-notes",
    "version": "1.0.0",
    "description": "Meeting Speech-to-Text application with Electron",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && electron .",
        "build": "npm run build:frontend && npm run build:electron",
        "build:frontend": "cd frontend && npm run build",
        "build:electron": "electron-builder",
        "build:win": "npm run build:frontend && electron-builder --win",
        "build:win:dir": "npm run build:frontend && electron-builder --win --dir",
        "dist": "npm run build",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "electron",
        "speech-to-text",
        "whisper"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^9.1.0",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "wait-on": "^8.0.1"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "multer": "^2.0.2"
    },
    "build": {
        "appId": "com.me-notes.app",
        "productName": "Me Notes",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "electron/**/*",
            "frontend/dist/**/*",
            "backend/whisper.cpp/build/bin/whisper-cli*",
            "backend/whisper.cpp/models/ggml-base.bin",
            "node_modules/**/*"
        ],
        "extraResources": [
            {
                "from": "backend/whisper.cpp/build/bin/whisper-cli",
                "to": "whisper-cli",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "backend/whisper.cpp/models/ggml-base.bin",
                "to": "models/ggml-base.bin"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.png",
            "category": "Utility"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.utilities"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}